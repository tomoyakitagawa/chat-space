.main-chat__message-list__message-box
  .main-chat__message-list__message-box__message-info
    .main-chat__message-list__message-box__message-info__user-name
      = message.user.name
    .main-chat__message-list__message-box__message-info__info-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__message-box__message-info__message
    - if message.content.present?
      %p.main-chat__message-list__message-box__message-info__message__message-content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?
